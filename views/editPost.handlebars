<div class="card">
  <a href = "/dashboard">&larr; Back to Dashboard </a>
  <h2 class="card-header">Edit Post</h2>
  <form class="card-body" id="edit-post-form">
      <div>
      <label class="form-label">Title:</label>
      <input class="form-input" type="text" name="post-title" value="{{post.postTitle}}"/>
    </div>
    
    <div>
      <label class="form-label">Content:</label>
      <textarea class="form-textarea form-input" name="post-text" data-number="8">{{post.postContent}}</textarea>
    </div>
 
    <button class="btn btn-primary" type="submit">EDIT</button>
    <input type="hidden" name="post-id" value="{{postId}}"/>
  </form>
  <div class="card-body">
   <button class="btn btn-primary" type="click" id="delete-btn">DELETE</button>
  </div> 
</div>

</form>

{{> comments post.comments}}

<script src="/js/comment.js"></script>
<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
